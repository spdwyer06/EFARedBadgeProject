<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GameStash</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #151414">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GameStash", "Index", "Home", new { area = "" }, new { @class = "navBarHome" })
                @* navbar-brand *@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Games", "Index", "Game", null, new { @class = "navBarLink" })</li>
                    <li>@Html.ActionLink("Reviews", "Index", "Review", null, new { @class = "navBarLink" })</li>
                    <li>@Html.ActionLink("Forums", "Index", "Thread", null, new { @class = "navBarLink" })</li>
                    @* Tab to hold everything user has created, reviews, threads, etc. (only show up when logged in ex. ElevenNote Notes) *@
                    <li>@*@Html.ActionLink("My Contributions", "Index", "???")*@</li>
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <footer>
            <p>&copy; @DateTime.Now.Year - GameStash</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

@model GS_Models.PostReplyViewModels.PostReplyDetail

@{
    ViewBag.Title = "Delete";
}

<h2 class="labelText">Are you sure you want to delete this post?</h2>
<h4>"@Model.ReplyContent"</h4>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt class="labelText">
            @Html.DisplayNameFor(model => model.CreatorDisplayName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatorDisplayName)
        </dd>

        <dt class="labelText">
            @Html.DisplayNameFor(model => model.ReplyContent)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReplyContent)
        </dd>

        <dt class="labelText">
            @Html.DisplayNameFor(model => model.ReplyCreated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReplyCreated)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="button btn btn-default" /> |
            @Html.ActionLink("Back to List", "PostRepliesIndex", new { postID = Model.PostID }, new { @class = "actionLinkText" })
        </div>
    }
</div>
